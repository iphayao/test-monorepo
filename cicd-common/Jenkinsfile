String validateFileChange(projectName) {
    def res = 'false'
    for(changeSet in currentBuild.changeSets) {
        for(entry in changeSet.getItems()) {
            for(file in entry.getAffectedFiles()) {
                if(file.getPath().startsWith(projectName)) {
                    print 'Change occured in project ${projectName}'
                    res = 'true'
                }
            }
        }
    }

    return res
}

pipeline {
    agent any

    stages {
        stage('test-monorepo-foo') { 
            steps {
                echo 'Validate changes on "test-monorepo-foo" project'
                echo validateFileChange('test-monorepo-foo')
                
            }
        }
        
        stage('test-monorepo-bar') {
            steps {
                echo 'Validate changes on "test-monorepo-bar" project'
                echo validateFileChange('test-monorepo-bar')
            }
        }
    }
}